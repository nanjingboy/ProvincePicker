<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/abbrView"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/province_picker_item_abbr_text_padding_left"
        android:textColor="@color/colorProvincePickerItemAbbrText"
        android:textSize="@dimen/province_picker_item_abbr_text_size"/>
    <TextView
        android:id="@+id/nameView"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/province_picker_item_name_text_padding_left"
        android:textColor="@color/colorProvincePickerItemNameText"
        android:textSize="@dimen/province_picker_item_name_text_size"/>
</LinearLayout>